<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:VertiGIS.Mobile.Toolkit.Views;assembly=VertiGIS.Mobile.Toolkit"
             mc:Ignorable="d"
             x:Class="VertiGIS.Mobile.Samples.Samples.Custom.GeocortexMobileElements.GeocortexMobileElementsXamlView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="This is a VertiGIS Studio Mobile enhanced activity indicator."
                   Margin="10, 0" />
            <ActivityIndicator IsRunning="True"
                               HeightRequest="75"
                               WidthRequest="75"
                               Margin="10, 0, 10, 10" />
            <ui:EnhancedButton Text="VertiGIS Studio Mobile button"
                               Margin="10" />
            <ui:EnhancedEntry  Placeholder="This is a VertiGIS Studio Mobile enhanced entry."
                               Margin="10"/>
            <Label Text="This is a VertiGIS Studio Mobile enhanced switch."
                   Margin="10, 0" />
            <Switch Margin="10, 0, 10, 10" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
